generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model accounts {
  id                  String  @id
  user_id             String
  type                String
  provider            String
  provider_account_id String
  refresh_token       String?
  access_token        String?
  expires_at          Int?
  token_type          String?
  scope               String?
  id_token            String?
  session_state       String?
  users               users   @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@unique([provider, provider_account_id])
}

model sessions {
  id            String   @id
  session_token String   @unique
  user_id       String
  expires       DateTime
  users         users    @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

model users {
  id             String     @id
  name           String?
  email          String?    @unique
  email_verified DateTime?
  image          String?
  accounts       accounts[]
  sessions       sessions[]
  tests          Test[]
  Consult        Consult[]
}

model verificationtokens {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Test {
  id                 Int      @unique @default(autoincrement())
  first_name         String
  last_name          String
  hospital_name      String
  prescription_image String
  prescription_date  DateTime
  user_email         String
  user               users    @relation(fields: [user_email], references: [email])
}

model Service {
  id             Int    @unique @default(autoincrement())
  name           String
  image          String
  labs_available Int?
  Lab            Lab?   @relation(fields: [labId], references: [id])
  labId          Int?
}

model Lab {
  id         Int    @unique @default(autoincrement())
  first_name String
  last_name  String
  password   String
  name       String
  city       String

  services Service[]
}

model Request {
  id      Int    @unique @default(autoincrement())
  name    String
  email   String
  message String
}

model Consult {
  id                 Int      @unique @default(autoincrement())
  first_name         String
  last_name          String
  hospital_name      String
  city               String
  health_condition   String
  prescription_image String
  prescription_date  DateTime
  user_email         String
  user               users    @relation(fields: [user_email], references: [email])
}
